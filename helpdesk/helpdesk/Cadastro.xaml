<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="helpdesk.Cadastro"
             Title="Cadastro de Usuario"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Cadastrar Novo Usuario"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   TextColor="Black"/>

            <Entry x:Name="entryNome"
                   Placeholder="Nome completo"
                   BackgroundColor="White"
                   HeightRequest="45" 
                   TextColor="Black"/>

            <Entry x:Name="entryEmail"
                   Placeholder="E-mail"
                   Keyboard="Email"
                   BackgroundColor="White"
                   HeightRequest="45" 
                   TextColor="Black"/>

            <Entry x:Name="entrySenha"
                   Placeholder="Senha"
                   IsPassword="True"
                   BackgroundColor="White"
                   HeightRequest="45" 
                   TextColor="Black"/>

            <Picker x:Name="pickerTipo"
                    Title="Selecione o tipo de usuario"
                    BackgroundColor="White"
                    TextColor="Black">
                <Picker.Items>
                    <x:String>Administrador</x:String>
                    <x:String>Usuario</x:String>
                </Picker.Items>
            </Picker>

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="Ativo:" VerticalOptions="Center" TextColor="Black"/>
                <Switch x:Name="switchAtivo" IsToggled="True"/>
            </StackLayout>

            <Button Text="Cadastrar"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    Clicked="OnCadastrarClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
