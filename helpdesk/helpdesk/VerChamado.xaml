<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="helpdesk.VerChamado"
 x:Name="ThisPage"
 Title="Ver Chamados"
 BackgroundColor="#F5F5F5">

 <VerticalStackLayout Padding="20" Spacing="10">
 <Label Text="Chamados" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black" />

 <CollectionView x:Name="collectionChamados" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
 <CollectionView.ItemTemplate>
 <DataTemplate>
 <Frame Margin="0,4" CornerRadius="8" HasShadow="True" BackgroundColor="White">
 <VerticalStackLayout Padding="10">
 <Label Text="{Binding Titulo}" FontAttributes="Bold" FontSize="16" TextColor="Black" />
 <HorizontalStackLayout Spacing="10">
 <Label Text="{Binding Prioridade}" FontSize="12" TextColor="Black" />
 <Label Text="{Binding Data}" FontSize="12" HorizontalOptions="EndAndExpand"  TextColor="Black"/>
 </HorizontalStackLayout>
 <Label Text="{Binding Descricao}" LineBreakMode="TailTruncation" MaxLines="2" FontSize="13" TextColor="Black"/>
 </VerticalStackLayout>
 </Frame>
 </DataTemplate>
 </CollectionView.ItemTemplate>
 </CollectionView>
 </VerticalStackLayout>

</ContentPage>