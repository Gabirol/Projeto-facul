<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="helpdesk.Home"
 BackgroundColor="#F5F5F5"
 Title="Home">

 <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
 <Label Text="Bem-vindo ao sistema de chamados!"
 FontSize="22"
 HorizontalOptions="Center"
 FontAttributes="Bold"
 TextColor="Black"/>

 <Button Text="Abrir Chamado"
 BackgroundColor="#0078D7"
 TextColor="White"
 CornerRadius="10"
 HeightRequest="45"
 Clicked="OnAbrirChamadoClicked" />

 <Button Text="Ver Chamados"
 BackgroundColor="#00B294"
 TextColor="White"
 CornerRadius="10"
 HeightRequest="45"
 Clicked="OnVerChamadosClicked" />

 <Button Text="Sair"
 BackgroundColor="#D83B01"
 TextColor="White"
 CornerRadius="10"
 HeightRequest="45"
 Clicked="OnLogoutClicked" />
 </VerticalStackLayout>
</ContentPage>
