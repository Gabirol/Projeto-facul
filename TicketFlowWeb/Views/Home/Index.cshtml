@{
    ViewData["Title"] = "Dashboard";
}

<div class="header">
    <h1>Sistema de Gestão de Chamados</h1>
    <div class="user-info">
        <span>João Silva</span>
        <div class="user-avatar">👤</div>
    </div>
</div>

<!-- Dashboard Section -->
<!-- Dashboard Section -->
<div id="dashboard" class="content-section">
    <h2>Dashboard</h2>
    <div class="dashboard-cards">
        <div class="card">
            <h3>Total de Chamados</h3>
            <div class="number">@ViewBag.TotalChamados</div>
        </div>
        <div class="card">
            <h3>Meus Chamados</h3>
            <div class="number">@ViewBag.MeusChamados</div>
        </div>
        <div class="card">
            <h3>Chamados Abertos</h3>
            <div class="number">@ViewBag.ChamadosAbertos</div>
        </div>
        <div class="card">
            <h3>Em Andamento</h3>
            <div class="number">@ViewBag.ChamadosAndamento</div>
        </div>
    </div>
</div>

<!-- Outras seções -->
<div id="criar-chamado" class="content-section" style="display:none;">
    <h2>Abrir Novo Chamado</h2>
    <form id="form-chamado">
        <div class="form-group">
            <label for="titulo">Título do Chamado</label>
            <input type="text" id="titulo" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="categoria">Categoria</label>
            <select id="categoria" class="form-control" required>
                <option value="">Selecione uma categoria</option>
                <option value="hardware">Hardware</option>
                <option value="software">Software</option>
                <option value="rede">Rede</option>
                <option value="outros">Outros</option>
            </select>
        </div>
        <div class="form-group">
            <label for="descricao">Descrição Detalhada</label>
            <textarea id="descricao" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label for="prioridade">Prioridade</label>
            <select id="prioridade" class="form-control" required>
                <option value="baixa">Baixa</option>
                <option value="media" selected>Média</option>
                <option value="alta">Alta</option>
                <option value="urgente">Urgente</option>
            </select>
        </div>
        <div class="form-actions">
            <button type="button" class="btn btn-primary" onclick="criarChamado()">Abrir Chamado</button>
            <button type="button" class="btn" onclick="showSection('dashboard')">Cancelar</button>
        </div>
    </form>
</div>

<<div id="ver-chamados" class="content-section" style="display:none;">
    <h2>Todos os Chamados</h2>
    <div class="table-container">
        <div class="text-center" id="loadingTodos" style="display: none;">
            <p>Carregando chamados...</p>
        </div>
        <table id="tabela-todos-chamados" style="display: none;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Categoria</th>
                    <th>Status</th>
                    <th>Prioridade</th>
                    <th>Data</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="corpo-todos-chamados">
                <!-- Os dados serão carregados via JavaScript -->
            </tbody>
        </table>
        <div id="sem-chamados-todos" style="display: none;">
            <p>Nenhum chamado encontrado.</p>
        </div>
    </div>
</div>
