@*
    Layout base do sistema TicketFlow.
    Usa Razor apenas para estruturar as views do ASP.NET.
*@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketFlow</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <h2>🎫 TicketFlow</h2>
            </div>
            <ul class="nav-menu">
                <li class="nav-item active" onclick="showSection('dashboard')">📊 Dashboard</li>
                <li class="nav-item" onclick="showSection('criar-chamado')">➕ Criar Chamado</li>
                <li class="nav-item" onclick="showSection('ver-chamados')">📋 Ver Chamados</li>
                <li class="nav-item" onclick="showSection('meus-chamados')">👤 Meus Chamados</li>
                <li class="nav-item" onclick="showSection('faq')">❓ FAQ e Soluções</li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
